<!-- Categories Section Begin -->

    <!-- Most Search Section Begin -->
    <section class="most-search spad">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="section-title">
              <h2>Our best announcements</h2>
              <p>
               In this section you will find the best announcements
              </p>
            </div>
          </div>
        </div>

        <!-- comienzo del div parte de las ofertas-->
        <div class="row">
          <!-- comienzo del div parte de las ofertas-->
          <div class="col-lg-12">
            <div class="tab-content">
              <div class="tab-pane active" id="tabs-1" role="tabpanel">
                <div class="row">
                  {{#each announcements}}
                  <div class="col-lg-4 col-md-6">
                    <div class="listing__item">
                      <div
                        class="listing__item__pic set-bg"
                        data-setbg="img/listing/tomate.jpg"
                      >
                        <img src="img/listing/semilla.png" alt="" />
                        <div class="listing__item__pic__tag">{{category.name}}</div>
                      </div>
                      <div class="listing__item__text">
                        <div class="listing__item__text__inside">
                          <h5>{{title}}</h5>
                          <div class="listing__item__text__rating">
                            <div class="listing__item__rating__star">
                              <span class="icon_star"></span>
                              <span class="icon_star"></span>
                              <span class="icon_star"></span>
                              <span class="icon_star"></span>
                              <span class="icon_star-half_alt"></span>
                            </div>
                            <h6>${{price}}</h6>
                          </div>
                          <ul>
                            <li>
                              <span class="icon_pin_alt"></span> {{latitude}}  {{longitude}}
                            </li>
                            <li>
                              <span class="icon_phone"></span> {{user.name}}
                            </li>
                          </ul>
                        </div>
                        <div class="listing__item__text__info">
                          <div class="listing__item__text__info__left">
                            <img src="img/listing/semillapeque.png" alt="" />

                            {{#if category.name}}
                            <span>Disponible</span>
                            {{/if}}
                          

                          </div>
                          <div class="listing__item__text__info__right">
                            {{state}}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                    {{/each}}                     
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>